{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "lib": ["webworker", "DOM", "ES2015"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "baseUrl": ".", // Set the base URL to your source directory
    "paths": {
      "$lib/*": ["src/lib/*"], // Adjust this mapping as necessary
      "$lib/@types/*": ["src/lib/@types/*"] // Ensure this is correct
    }
  }
}
